	menuentry 'Ubuntu 18.10, with Linux 4.15.0-13-generic (recovery mode)' --class ubuntu --class gnu-linux --class gnu --class os ${menuentry_id_option} 'gnulinux-rpool/ROOT/ubuntu_2-4.15.0-13-generic' {
